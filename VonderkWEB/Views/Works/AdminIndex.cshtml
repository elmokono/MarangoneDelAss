                            <img src="@p.FileName" alt="Photo" width="100" height="100" />
                        }
                    }

                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.WorkID }) |
                    @Html.ActionLink("Ver", "Details", new { id = item.WorkID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.WorkID })
