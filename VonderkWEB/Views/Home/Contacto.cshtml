@model VonderkWEB.Models.EmailFormModel
@{
    ViewBag.Title = "Contacto";
}

<section id="mundo" class="bk-grey" data-easy-reveal="fade-in-up">
    <div class="content">
        <div class="categoria-min"><a href="#">Grupo Vonderk</a></div>
        <h1>La empresa</h1>
        <div class="descripcion info" data-easy-reveal="fade-in-up">
            <p>
                <strong>Vonderk</strong> es una empresa moderna, miembro de una multinacional con sede en Hong Kong. Se dedica a comercializar artefactos de iluminación led de alta gama.<br /><br />
            </p>
        </div><br><br>
        <div class="container">
            <h2>Contáctenos</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromPhone, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromPhone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromPhone)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromEmail)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromCompany, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromCompany, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromCompany)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Message, new { @class = "myTextEditor form-control" })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Enviar" />
                    </div>
                </div>
            }
            <h2>@ViewBag.Message</h2>
        </div>
    </div>
</section>
<section>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d410.8059144588128!2d-58.49830330725199!3d-34.54222804780658!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcb6dab93b8157%3A0x39fd0f054bbfb6ff!2sGrupo+Vondek!5e0!3m2!1ses-419!2sar!4v1540229135263" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
</section>
